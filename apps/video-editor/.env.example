# Video Editor Service Configuration

# Service Configuration
PORT=8081

# Environment Settings
NEXT_PUBLIC_APP_ENV=local
NEXT_PUBLIC_USE_MINIO=true

# Local MinIO Storage (for development)
MINIO_ENDPOINT=http://localhost:9000
MINIO_REGION=us-east-1
MINIO_BUCKET_NAME=storage
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Production Storage (Vercel Blob)
# BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# Optional: Custom FFmpeg Path
# FFMPEG_PATH=/usr/local/bin/ffmpeg
# FFPROBE_PATH=/usr/local/bin/ffprobe

# Optional: Logging Level
# LOG_LEVEL=info

# Optional: Temporary Directory
# TEMP_DIR=/tmp/video-editor

# Optional: Max File Size (in bytes)
# MAX_FILE_SIZE=100000000

# Optional: Processing Timeout (in seconds)
# PROCESSING_TIMEOUT=300
