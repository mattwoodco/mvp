{
  "extends": "@money/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["../api/src/*"]
    },
    "strict": true,
    "composite": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../types",
    "next-env.d.ts",
    "next.config.js",
    "tailwind.config.ts",
    ".next/types/**/*.ts",
    "src/app/(legal)/privacy"
  ],
  "exclude": ["node_modules", ".next"]
}
