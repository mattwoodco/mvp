{
  "manifest_version": 3,
  "name": "Midjourney Image Scraper",
  "version": "1.0.0",
  "description": "A Chrome extension to automatically save generated images from Midjourney to your account",
  "permissions": ["storage", "activeTab", "tabs", "downloads"],
  "host_permissions": [
    "https://midjourney.com/*",
    "https://www.midjourney.com/*",
    "https://cdn.midjourney.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://midjourney.com/*", "https://www.midjourney.com/*"],
      "js": ["config.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Midjourney Image Scraper",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["https://midjourney.com/*", "https://www.midjourney.com/*"]
    }
  ]
}
