{
  "name": "mvp2",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "sh -c 'dotenv -e .env.${1:-local} -- turbo build' --",
    "dev": "sh -c 'dotenv -e .env.${1:-local} -- turbo dev --parallel' --",
    "db:push": "sh -c 'dotenv -e .env.${1:-local} -- turbo run db:push' --",
    "db:gen": "sh -c 'dotenv -e .env.${1:-local} -- turbo run db:gen' --",
    "db:std": "sh -c 'dotenv -e .env.${1:-local} -- turbo run db:std' --",
    "sync-envs": "node scripts/sync-envs.js",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck",
    "test": "turbo test --parallel"
  },
  "packageManager": "bun@1.2.15",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@manypkg/cli": "^0.24.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^8.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
