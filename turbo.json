{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env*"],
  "ui": "stream",
  "tasks": {
    "topo": { "dependsOn": ["^topo"] },
    "build": {
      "env": ["NODE_ENV", "APP_ENV", "BLOB_READ_WRITE_TOKEN", "DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist/**",
        "build/**",
        "lib/**"
      ]
    },
    "dev": {
      "env": ["NODE_ENV", "APP_ENV", "BLOB_READ_WRITE_TOKEN", "DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "env": ["NODE_ENV", "APP_ENV", "DATABASE_URL"],
      "inputs": ["drizzle.config.ts", "src/schema.ts", ".env*"],
      "cache": false
    },
    "db:gen": {
      "env": ["NODE_ENV", "APP_ENV", "DATABASE_URL"],
      "inputs": ["drizzle.config.ts", "src/schema.ts", ".env*"],
      "outputs": ["drizzle/**"]
    },
    "db:std": {
      "env": ["NODE_ENV", "APP_ENV", "DATABASE_URL"],
      "inputs": ["drizzle.config.ts", "src/schema.ts", ".env*"],
      "cache": false,
      "persistent": true
    },
    "clean": { "cache": false },
    "start": { "cache": false },
    "test": { "cache": false },
    "format": { "outputs": [] },
    "lint": { "outputs": [] },
    "typecheck": { "dependsOn": ["^topo"], "outputs": [] }
  }
}
