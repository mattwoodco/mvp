{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env*"],
  "ui": "stream",
  "tasks": {
    "topo": { "dependsOn": ["^topo"] },
    "build": {
      "env": [
        "NEXT_PUBLIC_APP_ENV",
        "BLOB_READ_WRITE_TOKEN",
        "DATABASE_URL",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "RESEND_API_KEY",
        "FROM_EMAIL",
        "USE_LIVE_STRIPE",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_BASIC_PRICE_ID",
        "STRIPE_PREMIUM_PRICE_ID",
        "STRIPE_LIVE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_LIVE_PUBLISHABLE_KEY",
        "STRIPE_LIVE_WEBHOOK_SECRET",
        "STRIPE_LIVE_BASIC_PRICE_ID",
        "STRIPE_LIVE_PREMIUM_PRICE_ID"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist/**",
        "build/**",
        "lib/**",
        ".react-email/**"
      ]
    },
    "dev": {
      "env": [
        "NEXT_PUBLIC_APP_ENV",
        "BLOB_READ_WRITE_TOKEN",
        "DATABASE_URL",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "RESEND_API_KEY",
        "FROM_EMAIL",
        "USE_LIVE_STRIPE",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_BASIC_PRICE_ID",
        "STRIPE_PREMIUM_PRICE_ID",
        "STRIPE_LIVE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_LIVE_PUBLISHABLE_KEY",
        "STRIPE_LIVE_WEBHOOK_SECRET",
        "STRIPE_LIVE_BASIC_PRICE_ID",
        "STRIPE_LIVE_PREMIUM_PRICE_ID"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "env": ["NEXT_PUBLIC_APP_ENV", "DATABASE_URL"],
      "inputs": ["drizzle.config.ts", "src/schema.ts", ".env*"],
      "cache": false
    },
    "db:gen": {
      "env": ["NEXT_PUBLIC_APP_ENV", "DATABASE_URL"],
      "inputs": ["drizzle.config.ts", "src/schema.ts", ".env*"],
      "outputs": ["drizzle/**"]
    },
    "db:std": {
      "env": ["NEXT_PUBLIC_APP_ENV", "DATABASE_URL"],
      "inputs": ["drizzle.config.ts", "src/schema.ts", ".env*"],
      "cache": false,
      "persistent": true
    },
    "clean": { "cache": false },
    "start": { "cache": false },
    "test": { "cache": false },
    "format": { "outputs": [] },
    "lint": { "outputs": [] },
    "typecheck": { "dependsOn": ["^topo"], "outputs": [] }
  }
}
